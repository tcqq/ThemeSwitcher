<resources>

    <style name="RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlActivated">@color/review_filled_color</item>
    </style>

    <style name="BottomNavigationStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="TabStyle" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@android:color/white</item>
    </style>

    <style name="NavigationHeaderStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
    </style>

</resources>
