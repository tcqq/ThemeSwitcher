<resources>

    <style name="Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <!--<item name="android:colorBackground">@color/background_color</item>-->

        <!-- Widget styles -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButton</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="tabStyle">@style/TabStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>

        <!-- Attrs styles -->
        <item name="textButton">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="outlinedButton">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="outlinedButtonOrButton">@style/OutlinedButton</item>
        <item name="textAppearanceTitle">@style/TextAppearance.AppCompat.Title</item>
        <item name="textAppearanceHelperText">@style/TextAppearance.Design.HelperText</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <style name="NavigationHeaderStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="BottomNavigationStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView"/>

    <style name="TabStyle" parent="@style/Widget.MaterialComponents.TabLayout"/>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface" >
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="ColorfulTheme.TextAppearanceHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ColorfulTheme.TextAppearanceTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@android:color/black</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/theme_white</item>
    </style>

    <style name="ExtendedFloatingActionButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">@color/theme_white</item>
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/secondary_color</item>
    </style>

    <style name="NavigationTheme">
        <item name="android:listPreferredItemHeightSmall">64dp</item>
    </style>

    <style name="NavigationTheme.Dense">
        <item name="android:listPreferredItemHeightSmall">48dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/review_filled_color</item>
    </style>

</resources>
